block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let ballid = toShow.ballid
    - let color  = toShow.color
    - let material = toShow.material
    - let cost = toShow.cost 
    - let actionid = "/resource/balls/" + ballid 
    script let actionid = "#{actionid}" 
    div 
    div.row 
      div(class='ballAttr mr-3') Ball ID is: 
      div #{ballid} 
    div.row 
      div(class='ballAttr mr-3') Color is: 
      div #{color} 
    div.row 
      div(class='ballAttr mr-3') Material is: 
      div #{material} 
    div.row 
      div(class='ballAttr mr-3') Cost  is: 
      div #{cost} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/ball' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'      
      }).then((resp) => { 
        return resp.json(); // or resp.text() or whatever the server sends 
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/ball' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }