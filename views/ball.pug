extends layout

block content
  h1= title
  p Welcome to the Ball pug 
  div(class="container-fluid")
        div(class="row m-1")
            -
                let ball  = [
                    {
                        "color": "Blue",
                        "material": "Steel",
                        "cost": "10$"
                    },
                    {
                        "color": "Pink",
                        "material": "Rubber",
                        "cost": "12$"
                    },
                    {
                        "color": "Red",
                        "material": "Plastic",
                        "cost": "9$"
                    }, 
                    {
                        "color": "Black",
                        "material": "Copper",
                        "cost": "29$"
                    },                         
                ]
            each v,index in ball 
             - let destination1 = `dispatch(\"/ball/update?id=${v._id}\")`
             - let destination2 = `dispatch(\"/ball/delete?id=${v._id}\")`
             - let destination3 = `dispatch(\"/ball/detail?id=${v._id}\")`
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.color}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.material}
                div(class="col-sm-2" onclick=`buy(${index})`) #{v.cost}
                button.btn( class="btn-primary ml-1", onclick= destination1) Update 
                button.btn( class="btn-secondary", onclick= destination2) Delete
                button.btn( class="btn-warning", onclick= destination3) View
        script. 
            function buy(itemNo)
            {
                alert(`You purchased Item ${itemNo+1}`)
            }
            
            function dispatch(path){ 
                 window.location.href=path 
            }     
  
        